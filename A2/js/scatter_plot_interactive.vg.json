{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 300,
  "background":"#282828",
  "data": {
    "url": "https://raw.githubusercontent.com/XinYun2020/FIT3179/main/A2/data/overdoses2.csv"
  },
  "params": [
    {
      "name": "Select_Years",
      "value": 1999,
      "bind": {
        "input": "range",
        "min": 1999,
        "max": 2014,
        "step": 1,
        "name": "Year"
      }
    }
  ],
  "transform": [
    {"filter": "datum.State == 'California'||'New York'"},
    {"filter": "datum.Deaths > 0"},
    {"filter": "datum.Year==Select_Years"},
    {
      "calculate": "datum.Death/datum.Population * 100000",
      "as": "Death per 100,000 Population"
    }
  ],
  "encoding": {
    "x": {
      "field": "Population",
      "type": "quantitative",
      "title": "Population",
      "axis": {"tickCount": 7},
      "scale": {"domain": [1, 40000000]}
    },
    "y": {
      "field": "Deaths",
      "type": "quantitative",
      "axis": {"tickCount": 6},
      "scale": {"domain": [1, 2400]}
    }
  },
  "layer": [
    {
      "selection": {
        "state_highlight": {
          "type": "multi",
          "fields": ["State"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 2000000, 5000000, 10000000, 20000000],
            "range": [10, 50, 100, 150, 300, 1000]
          },
          "legend": {"format": ".1s"}
        },
        "color": {"field": "State", "type": "nominal", "scale": {}},
        "opacity": {
          "condition": {"selection": "state_highlight", "value": 0.8},
          "value": 0.2
        },
        
        "text": {"field": "State", "type": "nominal"},
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Deaths", "type": "quantitative", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","},
          {
            "field": "Death per 100,000 Populationn",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "State", "type": "nominal"},
        "color": {"value": "white"},
        "opacity": {
          "condition": {
            "test": "datum['State'] == 'California' || datum['State'] == 'New York' || datum['State'] == 'Texas' || datum['State'] == 'Florida'|| datum['State'] == 'Ohio'",
            "value": 1
          },
          "value": 0
        },

        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Deaths", "type": "quantitative", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","},
          {
            "field": "Death per 100,000 Population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {
    "legend":{"labelColor":"white","titleColor": "white","disable": true},
    "view": {
      "stroke": "transparent"
     },
    "axis": {"domainWidth": 1,
      "domainColor": "white",
      "tickColor": "white",
      "labelColor": "white",
      "grid": false,
      "titleColor": "white"
      }
  }
}
